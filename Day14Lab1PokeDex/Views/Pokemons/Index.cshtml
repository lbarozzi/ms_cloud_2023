                @Html.DisplayFor(modelItem => item.PokemonSpecialAttack)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PokemonSpecialDefense)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PokemonSpeeed)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PokemonLifePoints)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PokemonStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsFemale)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsLegendary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEgg)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PokemonID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PokemonID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PokemonID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
