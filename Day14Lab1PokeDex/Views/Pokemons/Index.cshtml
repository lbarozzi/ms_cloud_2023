                @Html.DisplayNameFor(model => model.PokemonStatus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsMale)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsFemale)
            </th>
