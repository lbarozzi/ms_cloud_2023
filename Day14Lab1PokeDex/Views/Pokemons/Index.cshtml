                @Html.DisplayFor(modelItem => item.PokemonWeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PokemonLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PokemonXP)
