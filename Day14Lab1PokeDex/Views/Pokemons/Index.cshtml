<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PokemonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PokemonWeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PokemonLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PokemonXP)
            </th>
