@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    List<Anagrafica> elenco = null;
    if(ViewData.ContainsKey("max")) { // && ViewData["max"]!= null ) {
        elenco = ViewData["max"] as List<Anagrafica>;
        //elenco = (List<Anagrafica>) ViewData["max"];
    }
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <ol>
        @for(int i = 0; i < 10; i++) {
            <li>Ma la volpe @@ @i</li>
        }
    </ol>

    <hr />
    <ul>
        @foreach(string g in Model._data) {
            <li>@g</li>
        }
    </ul>
    <!-- Tabella di Anagrafiche -->
    <table>
        <thead>
            <tr>
                <th>firstName</th>
                <th>lastName</th>
            </tr>
        </thead>
        <tbody>
            <!-- ciclo anagrafiche -->
            @if (elenco != null && elenco.Count>0)
            {
                @foreach (Anagrafica voce in elenco)
                {
                    <tr>
                        <td>@voce.FirstName</td>
                        <td>@voce.LastName</td>
                    </tr>
                }
            } else {
                <tr>
                    <td>No Data</td>

                </tr>
            }
            <!--end of ciclo anagrafiche -->
        </tbody>
    </table>

</div>
