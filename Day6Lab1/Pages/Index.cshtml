@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Lingo Game</h1>
    <div class="jumbotron">
    <h2>
        
        @for(int i =0;i <Model.Hint.Length;i++) {
                @if (Model.Result.Count > 0) {
                    <label style="color:@Model.Result[i]">@Model.Hint[i]</label>
                } else {
                    <label style="color:green" >@Model.Hint[i]</label>
                }
        }
    </h2>

    </div>
    <hr />
    @foreach (string cur in Model.Tentativi) {
         @cur
    }
    <hr />
    <div>
        @if (!Model.Win)
        {
            <form method="post">
                <div class="form-group">
                <input type="text" class="form-control" maxlength="@Model.WordLen" name="word"/>
                <input type="submit" class="form-control" name="try" value="prova" />
            </div>
            </form>
        } else {
            <h1>You WIN!!!</h1>
        }
    </div>
</div>